@using Azure.Core
@{
    string pageUrl = Context.Request.Path.ToString();
}

<style>

    .cls-1 {
        fill: #88a7fc;
        width: 21px;
    }

    .cls-2 {
        fill: #486fff;
        width: 21px;
    }

