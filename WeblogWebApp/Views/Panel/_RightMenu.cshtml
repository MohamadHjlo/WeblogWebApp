                <li class="menu-item mb-4 @(pageUrl.Contains("/PostTag/") ? "menu-item-active" : string.Empty)" aria-haspopup="true">
                    <a href="/PostTag/List" class="menu-link ">
                        <i class="fa fa-tag  mr-4" style="color: rgb(136, 167, 252);font-size: 21px;">
                            <span></span>
                        </i><span class="menu-text">برچسب‌ها</span>
