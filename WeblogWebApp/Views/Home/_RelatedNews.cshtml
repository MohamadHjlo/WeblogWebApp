@model List<WeblogWebApp.Models.Home.SinglePostInBlogViewModel>
@{
string Domain = Context.Request.Scheme + System.Uri.SchemeDelimiter + Context.Request.Host;
    var siteUrl = Domain;
}

<div class="post-module-3">
    <div class="widget-header-2 position-relative mb-30">
        <h5 class="mt-5 mb-30">اخبار مرتبط</h5>
    </div>
    <div class="loop-list loop-list-style-1">
        @foreach (var item in Model)
        {
            <article class="hover-up-2 transition-normal wow fadeInUp  animated">
                <div class="row mb-40 list-style-2">
                    <div class="col-md-4">
                        <div class="post-thumb position-relative border-radius-5">
                            <div class="img-hover-slide border-radius-5 position-relative" style="background-image: url(/Media/Post/Thumb/@item.Media.Image)">
                                <a class="img-link" href="/Home/Single/@item.Id"></a>
                            </div>
                            <ul class="social-share">
                                <li><a href="#"><i class="elegant-icon social_share"></i></a></li>
                                <li><a class="fb" href="@("https://eitaa.com/share/url?url="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" title="اشتراک گذاری در ایتا" target="_blank" rel="noopener noreferrer"><i class=""><img src="/Content/Main/images/footer/contact/social/eita.svg" style="width: 50%" alt="ایکون ایتا" /></i></a></li>
                                <li><a class="fb" href="@("https://www.linkedin.com/shareArticle?mini=true"+item.Slug+"&title=&url="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" title="اشتراک گذاری در لینکدین" target="_blank" rel="noopener noreferrer"><i class="elegant-icon social_linkedin"></i></a></li>
                                <li><a class="fb" href="@("https://telegram.me/share/url?url="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" title="اشتراک گذاری در تلگرام" target="_blank" rel="noopener noreferrer"><i class=""><img src="~/Content/Main/images/icon-telegram.svg" style="width: 50%" alt="ایکون تلگرام" /></i></a></li>
                                <li><a class="fb" href="@("https://web.whatsapp.com/send?text="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" title="اشتراک گذاری در واتساپ" target="_blank" rel="noopener noreferrer"><i class=""><img src="~/Content/Main/images/icon-whatsapp.svg" style="width: 50%" alt="آیکون واتساپ" /></i></a></li>
                                <li><a class="fb" href="@("https://www.facebook.com/sharer/sharer.php?u="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" title="اشتراک گذاری در فیس بوک" target="_blank" rel="noopener noreferrer"><i class="elegant-icon social_facebook"></i></a></li>
                                <li><a class="tw" href="@("https://twitter.com/share?text="+@item.Slug+"&url="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" target="_blank" title="اشتراک گذاری در توییتر" rel="noopener noreferrer"><i class="elegant-icon social_twitter"></i></a></li>
                                <li><a class="pt" href="@("//www.pinterest.com/pin/create/button/?description="+item.Slug+"&media="+siteUrl+"/Media/Post/Thumb/"+item.Media.Image+"&url="+siteUrl+"/Home/Single/"+item.Id+"/"+item.Slug)" target="_blank" title="اشتراک گذاری در پینترست " rel="noopener noreferrer"><i class="elegant-icon social_pinterest"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8 align-self-center">
                        <div class="post-content">
                            <div class="entry-meta meta-0 font-small mb-10">
                                <a href="category.html"><span class="post-cat text-yellow">@item.Category</span></a>
                            </div>
                            <h5 class="post-title font-weight-900 mb-20">
                                <a href="/Home/Single/@item.Id">
                                    @item.Title
                                </a>
                            </h5>
                            <div class="post-excerpt mb-10 font-small">
                                <p>
                                    @{
                                        var excerpt = item.Excerpt;
                                        var finalExcerpt = excerpt.Length > 150 ? excerpt.Substring(0, 150) + "..." : excerpt + "...";
                                        <span>@finalExcerpt</span>
                                    }
                                </p>
                            </div>
                            <div class="entry-meta meta-1 font-x-small text-uppercase" style="color: #00dfff ">
                                <span class="post-by has-dot mr-0">@item.Views مشاهده</span>
                                <span class="time-reading has-dot">@item.StudyTime دقیقه مطالعه</span>
                                <span class="post-on">@item.PersianCreatedAt</span>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        }

    </div>
</div>
