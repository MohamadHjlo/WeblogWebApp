@section scripts{
    <script src="~/Content/Main/js/blog/vendor/wow.min.js"></script>
    <script src="~/Content/Main/js/blog/vendor/jquery.scrollUp.min.js"></script>
    <script src="~/Content/Main/js/blog/vendor/jquery.sticky.js"></script>
    <script src="~/Content/Main/js/blog/vendor/jquery.theia.sticky.js"></script>
    <script src="~/Content/Main/js/blog/main.js"></script>

    <script>

        $(document).on("click", ".pagination-area .page-item", function (e) {
            e.preventDefault();
            var currentPage = $(this).attr("data-page");

            $.ajax({
                method: "post",
                data: { currentPage: currentPage },
                url: "/blog/GetLatestPostsForPartialView",
                success: function (data) {
                    $("#latestNews").empty();
                    $("#latestNews").html(data);
                },
                error: function (error) {

                }
            });
        });


        $.ajax({
            method: "post",
            url: "/blog/CategoryArchive",
            data: { id: @ViewBag.Id},
            success: function (data) {
                $("#archivePosts").empty();
                $("#archivePosts").html(data);
            },
            error: function (error) {

            }
        });


        $(document).ready(function () {
            $.ajax({
                method: "post",
                url: "/blog/GetMostViewsPost",
                success: function (data) {
                    $("#mostViewsNews").empty();
                    $("#mostViewsNews").html(data);
                },
                error: function (error) {

                }
            });

            $.ajax({
                method: "post",
                url: "/blog/GetLatestPostCommentsForPartialView",
                success: function (data) {
                    $("#postComments").empty();
                    $("#postComments").html(data);
                },
                error: function (error) {

                }
            });
        });


        $(document).on("click", ".pagination-area .page-item", function (e) {
            e.preventDefault();
            var currentPage = $(this).attr("data-page");

            $.ajax({
                method: "post",
                data: {id: @ViewBag.Id, currentPage: currentPage },
                url: "/blog/CategoryArchive",
                success: function (data) {
                    $("#archivePosts").empty();
                    $("#archivePosts").html(data);
                },
                error: function (error) {

                }
            });
        });
    </script>
}