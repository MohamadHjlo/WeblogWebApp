@model List<WeblogWebApp.Models.Home.SinglePostInBlogViewModel>


<ul class="list-post">

    @foreach (var item in Model)
    {
        <li class="mb-30 wow fadeInUp animated" style="animation-name: none;">
            <div class="d-flex flex-row-reverse has-border p-15 hover-up transition-normal border-radius-5">
                <div class="post-content media-body">
                    <h6 class="post-title mb-15 text-limit-2-row font-medium">
                        <a href="/Home/Single/@item.Id">
                            @item.Title
                        </a>
                    </h6>
                    <div class="entry-meta meta-1 font-x-small text-uppercase">
                        <span class="post-by has-dot mr-0">@item.Views مشاهده</span>
                        <span class="post-on">@item.PersianCreatedAt</span>
                    </div>
                </div>
                <div class="post-thumb post-thumb-80 d-flex ml-15 border-radius-5 img-hover-scale overflow-hidden">
                    <a class="color-white" href="/Home/Single/@item.Id">
                        <img src="~/Media/Post/Thumb/@item.Media.Image" alt="@item.Media.ImageAlt">
                    </a>
                </div>
            </div>
        </li>
    }

</ul>